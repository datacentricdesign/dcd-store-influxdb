{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "brace-style": "warn",
    "new-cap": [
      "error"
    ],
    "no-var": "warn",
    "require-jsdoc": "warn",
    "max-len": "warn",
    "max-statements": "warn"
  }
}
